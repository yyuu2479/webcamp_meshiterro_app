<% if @post_image.errors.any? %>
  <%= @post_image.errors.count %> 件数のエラーが発生しました
  <% @post_image.errors.full_messages.each do |message| %>
    <%= message %>
  <%end%>
<% end %>

<h1>画像投稿用フォーム</h1>
<%= form_with model:@post_image, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>ショップ名</h4>
  <%= f.text_field :shop_name %>
  <h4>説明</h4>
  <%= f.text_area :caption %>
  <%= f.submit '投稿' %>
<% end %>